server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /var/www/public;
    index index.php index.html index.htm;

    server_name skeleton.vagrant.test;

	access_log /var/www/log/access.log;
	error_log /var/www/log/error.log;

	gzip on;
	gzip_comp_level 2;
	gzip_http_version 1.0;
	gzip_proxied any;
	gzip_min_length 256;
	gzip_buffers 16 8k;
	gzip_types text/plain text/html text/css application/x-javascript text/xml application/xml application/xml+rss application/javascript text/javascript;
	gzip_disable "MSIE [1-6].(?!.*SV1)";
	gzip_vary on;

    location / {
        try_files $uri $uri/ /index.php?q=$uri&$args;
    }

    location ~ \.php$ {
        try_files $uri /index.php =404;
		proxy_intercept_errors on;
        fastcgi_index index.php;
        fastcgi_buffers 8 256k;
        fastcgi_buffer_size 128k;
        fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
        fastcgi_intercept_errors on;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}
